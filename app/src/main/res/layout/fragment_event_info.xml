<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top">


                <RelativeLayout
                    android:id="@+id/initial"
                    android:layout_width="match_parent"
                    android:layout_height="175sp"
                    android:background="@color/colorAccent"
                    android:paddingBottom="1sp">


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_a"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="175sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:fontFamily="serif"
                                    android:gravity="center"
                                    android:text="TextView"
                                    android:textColor="#FFFF"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/shortd"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignStart="@+id/facname"
                                    android:layout_below="@+id/facname"
                                    android:gravity="center"
                                    android:text="TextView"
                                    android:textColor="#ece6e6"
                                    android:textSize="18sp" />


                            </LinearLayout>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/initial">


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_a1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:elevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/a11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:orientation="horizontal"
                                android:weightSum="4">

                                <ImageView
                                    android:id="@+id/img1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/ic_date_range_black_24dp" />

                                <TextView
                                    android:id="@+id/a1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_span="3"
                                    android:layout_weight="3"
                                    android:fontFamily="serif"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="20dp"
                                    android:paddingTop="10dp"
                                    android:text="Date :"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/a11"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:paddingBottom="10dp"
                                android:paddingLeft="50dp"
                                android:paddingRight="20dp"
                                android:paddingTop="10dp"
                                android:text=""
                                android:textColor="#292f33"
                                android:textSize="16sp" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_a2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_view_a1"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:elevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/ic_access_time_black_24dp" />

                                <TextView
                                    android:id="@+id/a2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_span="3"
                                    android:fontFamily="serif"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="20dp"
                                    android:paddingTop="10dp"
                                    android:text="Time :"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/eventtime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/a2"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingBottom="10dp"
                                android:paddingLeft="50dp"
                                android:paddingRight="20dp"
                                android:paddingTop="10dp"
                                android:text=""
                                android:textColor="#292f33"
                                android:textSize="16dp" />


                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_a3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_view_a2"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:elevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/ic_place_black_24dp" />

                                <TextView
                                    android:id="@+id/a3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_span="3"
                                    android:fontFamily="serif"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="20dp"
                                    android:paddingTop="10dp"
                                    android:text="Venue :"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/venue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/a3"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingBottom="10dp"
                                android:paddingLeft="50dp"
                                android:paddingRight="20dp"
                                android:paddingTop="10dp"
                                android:text=""
                                android:textColor="#292f33"
                                android:textSize="16sp" />


                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_a4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_view_a3"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:elevation="3dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/a4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_span="3"
                                android:fontFamily="serif"
                                android:paddingBottom="10dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:paddingTop="10dp"
                                android:text="General Details :"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/other"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/a4"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingBottom="10dp"
                                android:paddingLeft="50dp"
                                android:paddingRight="20dp"
                                android:paddingTop="10dp"
                                android:text=""
                                android:textColor="#292f33"
                                android:textSize="16sp" />


                        </RelativeLayout>


                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_a5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_view_a4"
                        android:layout_gravity="center"
                        android:layout_marginBottom="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:elevation="3dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/a5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_span="3"
                                android:fontFamily="serif"
                                android:paddingBottom="10dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:paddingTop="10dp"
                                android:text="Rules :"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/rules"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/a5"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingBottom="20dp"
                                android:paddingLeft="50dp"
                                android:paddingRight="20dp"
                                android:paddingTop="10dp"
                                android:text=""
                                android:textColor="#292f33"
                                android:textSize="16sp" />


                        </RelativeLayout>


                    </android.support.v7.widget.CardView>


                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>